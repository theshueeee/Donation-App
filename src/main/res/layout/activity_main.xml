<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E9ECEF"
    android:id="@+id/main">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#007BFF"
        android:padding="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NGO DIRECTORY"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu Button"
            android:layout_marginLeft="165dp"/>
    </LinearLayout>

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/searchbar"
            android:hint="Search"
            android:padding="10dp"
            android:drawablePadding="8dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/rounded_button"
            android:src="@drawable/filter"
            android:padding="8dp" />
    </LinearLayout>

    <!-- NGO Cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- NGO Card Example -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="25dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="WWF Logo"
                android:src="@drawable/wwf"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WWF-Malaysia"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Animal Welfare"
                    android:textSize="16sp"
                    android:textColor="#6C757D" />
            </LinearLayout>

            <Button
                android:id="@+id/viewmorewwf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#007BFF"
                android:text="View more"
                android:textColor="#FFFFFF"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Unicef Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="25dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Unicef Logo"
                android:src="@drawable/unicef"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unicef - Malaysia"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Children's Fund"
                    android:textSize="16sp"
                    android:textColor="#6C757D" />
            </LinearLayout>

            <Button
                android:id="@+id/viewmoreunicef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#007BFF"
                android:text="View more"
                android:textColor="#FFFFFF"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Malaysia For Syria -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="25dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Unicef Logo"
                android:src="@drawable/syria"
                android:scaleType="fitCenter"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Malaysia For Syria"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Refugee Care"
                    android:textSize="16sp"
                    android:textColor="#6C757D" />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#007BFF"
                android:text="View more"
                android:textColor="#FFFFFF"
                android:padding="8dp" />
        </LinearLayout>
        <!-- Greenpeace -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="27dp"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Greenpeace"
                android:src="@drawable/greenpeace"
                android:scaleType="fitCenter"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Greenpeace"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Animal Warfare"
                    android:textSize="16sp"
                    android:textColor="#6C757D" />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#007BFF"
                android:text="View more"
                android:textColor="#FFFFFF"
                android:padding="8dp" />
        </LinearLayout>
        <!-- Greenpeace -->

        <!-- Bottom Navigation -->
        <LinearLayout
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#007BFF"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Back Button"
                android:layout_marginEnd="8dp"
                android:background="@drawable/previous"
                android:backgroundTint="#FFFFFF"/>

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/home"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Home Button" />

            <Button
                android:id="@+id/next"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/next"
                android:contentDescription="Next Button" />

        </LinearLayout>
    </LinearLayout> <!-- Closing for cards -->
</LinearLayout> <!-- Closing for root LinearLayout -->
