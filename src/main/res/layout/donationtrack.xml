<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E9ECEF">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#007BFF"
        android:padding="25dp"
        android:orientation="horizontal"
        android:gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY DONATION"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            android:layout_marginLeft="170dp"
            android:contentDescription="Menu Button" />


    </LinearLayout>

    <!-- Total Donations -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#28a745"
        android:padding="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:gravity="center">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Impact : 1 donations"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold" />

    </LinearLayout>


    <!-- NGOs Donated Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="25dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="WWF Logo"
            android:src="@drawable/wwf"
            android:scaleType="fitCenter"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WWF-Malaysia"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Animal Welfare"
                android:textSize="16sp"
                android:textColor="#6C757D" />
        </LinearLayout>

        <Button
            android:id="@+id/viewmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#007BFF"
            android:padding="8dp"
            android:text="View more"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Funds Usage Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="2dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Know more on how your funds are used"
            android:textStyle="bold"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/tiger"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp"
            android:contentDescription="Funds Usage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WWF has used your funds to help the endangered species across the globe. Thank you for donating and helping as feed the Malayan tigers :)"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:textColor="#6C757D" />

    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#007BFF"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/previous"
            android:contentDescription="Back Button" />

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/home"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Home Button" />

        <Button
            android:id="@+id/next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/next"
            android:contentDescription="Next Button" />

    </LinearLayout>

</LinearLayout>