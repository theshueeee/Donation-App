<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#E0E0E0" /> <!-- Light gray background -->

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="@color/white" /> <!-- Slightly darker gray border -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" /> <!-- Corner radius of 10dp -->

    <!-- Padding inside the EditText -->
