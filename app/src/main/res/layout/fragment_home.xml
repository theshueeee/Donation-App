<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToPadding="false">

        <!-- Header Section -->
        <TextView
            android:id="@+id/home_welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="@color/blue"
            android:padding="16dp"
            android:text="@string/welcome_message"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Featured Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/featured_section_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:padding="16dp"
        android:clipToPadding="false" />

        <!-- Categories Section (Horizontal Scroll) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingEnd="16dp"
                android:weightSum="4"> <!-- Optional to align the buttons -->

                <!-- Buttons with spacing between them -->
                <Button
                    android:id="@+id/category_ngo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ngo_directory"
                    android:backgroundTint="@color/blue"
                    android:textColor="@color/white"
                    android:layout_marginEnd="12dp"
                    android:padding="12dp"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:id="@+id/category_donations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feedback"
                    android:backgroundTint="@color/blue"
                    android:textColor="@color/white"
                    android:layout_marginEnd="12dp"
                    android:padding="12dp"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:id="@+id/category_volunteer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/volunteer"
                    android:backgroundTint="@color/blue"
                    android:textColor="@color/white"
                    android:layout_marginEnd="12dp"
                    android:padding="12dp"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:id="@+id/category_learn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Learn"
                    android:backgroundTint="@color/blue"
                    android:textColor="@color/white"
                    android:layout_marginEnd="12dp"
                    android:padding="12dp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Recent Visits Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recent_visits_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewNgo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:clipToPadding="false" />

    </LinearLayout>
</ScrollView>


